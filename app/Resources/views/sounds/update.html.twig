{% extends 'base.html.twig' %}

{% block body %}
	<h1>Éditer enregistrement sonore :</h1>

	<audio controls="true" src="{{ asset('audio') }}/{{ sound.getFilename() }}"></audio>

	{{ form_start(form) }}
	<table class="nice">
		<tr><th>Locuteur</th><td>{% if sound.getIdiolect().getSpeaker() %}<a href='{{ path('speakersShow', {'id': sound.getIdiolect().getSpeaker().getId()}) }}'>{{ sound.getIdiolect().getSpeaker().getName() }}</a>{% else %}-{% endif %}</td></tr>
		<tr><th>Idiolect</th><td>{{ form_widget(form.idiolect) }}</td></tr>
		<tr><th>Transcription</th><td>{{ form_widget(form.text) }}</td></tr>
		<tr><th>Description</th><td>{{ form_widget(form.description) }}</td></tr>
		<tr><th colspan="2">{{ form_widget(form.save) }}</th></tr>
	</table>
	{{ form_end(form) }}

{% endblock %}

