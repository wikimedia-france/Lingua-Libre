{% extends 'base.html.twig' %}

{% block body %}
<article>
	{% include 'flash.inc.twig' %}

	<h1>Change password</h1>
	{{ form_start(form) }}
	{{ form_errors(form) }}
	<table class="nice">
		<tr><th>Current Password</th><td>{{ form_widget(form.oldPlainPassword) }}{{ form_errors(form.plainPassword) }}</td></tr>
		<tr><th>New Password</th><td>{{ form_widget(form.plainPassword.first) }}{{ form_errors(form.plainPassword.first) }}</td></tr>
		<tr><th>Confirm password</th><td>{{ form_widget(form.plainPassword.second) }}{{ form_errors(form.plainPassword.second) }}</td></tr>
		<tr><th colspan="2">{{ form_widget(form.save) }}</th>
	</table>
	{{ form_end(form) }}
</article>
{% endblock %}

